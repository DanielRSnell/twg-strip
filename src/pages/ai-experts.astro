---
import Base from "@/layouts/Base.astro";
import ExternalLogo from "../components/ExternalLogo.astro";
import CallToAction from "@/partials/CallToAction.astro";

// Custom call to action for AI Experts page
const call_to_action = {
  data: {
    enable: true,
    title: "Ready to Partner with AI Experts?",
    image: "/images/call-to-action.png",
    description: "Transform your business with ThisWay's proven AI expertise. From strategy to implementation, we deliver results that matter.",
    button: {
      enable: true,
      label: "Schedule Consultation",
      link: "/contact"
    }
  }
};
---

<Base>
  <!-- Hero Section -->
  <section class="py-24 section bg-theme-light">
    <div class="container relative">
      <div class="justify-center row gy-3">
        <div class="lg:col-8">
          <h1
            class="text-2xl font-semibold tracking-tight text-center md:text-3xl lg:text-4xl text-dark lg:text-balance"
            data-aos="fade-up-sm"
            data-aos-delay="100"
          >
            Why ThisWay Global: Proven AI Experts Driving Real Results
          </h1>
        </div>
        <div
          class="inline-block text-center"
          data-aos="fade-up-sm"
          data-aos-delay="200"
        >
          <button class="btn btn-primary">
            Explore Our AI Solutions
          </button>
        </div>
        <div class="lg:col-10" data-aos="fade-up-sm" data-aos-delay="300">
          <div class="flex flex-wrap gap-2 justify-center items-center mb-6">
            <div class="flex -space-x-2">
              <div class="inline-block overflow-hidden rounded-full outline-white size-8 outline-2">
                <ExternalLogo domain="openai.com" name="OpenAI" height={32} width={32} class="object-cover object-center" />
              </div>
              <div class="inline-block overflow-hidden rounded-full outline-white size-8 outline-2">
                <ExternalLogo domain="microsoft.com" name="Microsoft" height={32} width={32} class="object-cover object-center" />
              </div>
              <div class="inline-block overflow-hidden rounded-full outline-white size-8 outline-2">
                <ExternalLogo domain="google.com" name="Google" height={32} width={32} class="object-cover object-center" />
              </div>
              <div class="inline-block overflow-hidden rounded-full outline-white size-8 outline-2">
                <ExternalLogo domain="anthropic.com" name="Anthropic" height={32} width={32} class="object-cover object-center" />
              </div>
            </div>
            <div class="text-xs text-center text-light">
              <span class="block">Trusted AI technology partners</span>
              <span class="block">15+ years of innovation excellence</span>
            </div>
          </div>
        </div>
      </div>

      <div class="mx-auto mt-12 relative h-[400px] md:h-[500px] lg:h-[600px]" data-aos="fade-up-sm" data-aos-delay="300">
        <div class="stack-container relative w-full h-full">
          <!-- Launch HPC Dashboard - Back card -->
          <div class="stack-card absolute inset-0 w-full h-full" style="z-index: 1; transform: rotate(-2deg) translateY(10px) translateX(-15px);">
            <img
              loading="eager"
              decoding="async"
              alt="Launch HPC Performance Dashboard"
              class="object-cover w-full h-full rounded-lg border shadow-lg border-border"
              src="/images/launch-dashboard.webp"
            />
            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-medium text-dark">
              Launch HPC
            </div>
          </div>
          
          <!-- AI4Jobs - Middle card -->
          <div class="stack-card absolute inset-0 w-full h-full" style="z-index: 2; transform: rotate(1deg) translateY(5px) translateX(8px);">
            <img
              loading="eager"
              decoding="async"
              alt="AI4Jobs Platform Interface"
              class="object-cover w-full h-full rounded-lg border shadow-lg border-border"
              src="/images/sullys-sandbox.jpeg"
            />
            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-medium text-dark">
              AI Research
            </div>
          </div>
          
          <!-- Sully's Sandbox - Front card -->
          <div class="stack-card absolute inset-0 w-full h-full" style="z-index: 3; transform: rotate(-1deg) translateY(0px) translateX(5px);">
            <img
              loading="eager"
              decoding="async"
              alt="Sully's Sandbox AI Assistant Platform"
              class="object-cover w-full h-full rounded-lg border shadow-lg border-border"
              src="/images/sullys-dash.png"
            />
            <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-medium text-dark">
              Sully's Sandbox
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Expertise Section -->
  <section class="section">
    <div class="container">
      <div>
        <p class="text-sm font-bold uppercase text-tertiary" data-aos="fade-right-sm" data-aos-delay="100">Core Expertise</p>
