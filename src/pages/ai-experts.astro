                  <ExternalLogo domain="huggingface.co" name="Hugging Face" height={32} width={32} />
                  <ExternalLogo domain="openai.com" name="OpenAI" height={32} width={32} />
                  <ExternalLogo domain="anthropic.com" name="Anthropic" height={32} width={32} />
                  <ExternalLogo domain="langchain.com" name="LangChain" height={32} width={32} />
                </div>
              </div>
