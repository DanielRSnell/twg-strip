<style>
  .stack-container {
    perspective: 1000px;
  }
  
  .stack-card {
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center center;
  }
  
  .stack-card.active {
    z-index: 10 !important;
    transform: rotate(0deg) translateY(0px) translateX(0px) scale(1) !important;
  }
  
  .stack-card.behind {
    z-index: 5 !important;
    transform: rotate(-2deg) translateY(8px) translateX(-10px) scale(0.96) !important;
  }
  
  .stack-card.back {
    z-index: 1 !important;
    transform: rotate(1deg) translateY(16px) translateX(10px) scale(0.92) !important;
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const stackCards = document.querySelectorAll('.stack-card');
    
    if (!stackCards.length) return;
    
    let currentIndex = 0;
    const rotationInterval = 3000; // 3 seconds
    
    function updateCardPositions() {
      stackCards.forEach((card, index) => {
        // Remove all position classes
        card.classList.remove('active', 'behind', 'back');
        
        // Calculate position relative to current active card
        const position = (index - currentIndex + stackCards.length) % stackCards.length;
        
        if (position === 0) {
          card.classList.add('active');
        } else if (position === 1) {
          card.classList.add('behind');
        } else {
          card.classList.add('back');
        }
      });
    }
    
    function rotateCards() {
      currentIndex = (currentIndex + 1) % stackCards.length;
      updateCardPositions();
    }
    
    // Initialize positions
    updateCardPositions();
    
    // Start rotation
    const rotationTimer = setInterval(rotateCards, rotationInterval);
    
    // Pause rotation on hover
    const stackContainer = document.querySelector('.stack-container');
    if (stackContainer) {
      stackContainer.addEventListener('mouseenter', () => {
        clearInterval(rotationTimer);
      });
      
      stackContainer.addEventListener('mouseleave', () => {
        setInterval(rotateCards, rotationInterval);
      });
    }
    
    // Clean up on page unload
    window.addEventListener('beforeunload', () => {
      clearInterval(rotationTimer);
    });
  });
</script>