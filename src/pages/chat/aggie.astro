---
import "@/styles/prototype.scss";
import { AstroFont } from "astro-font";
import { ViewTransitions } from "astro:transitions";
import WebChat from "@/components/WebChat.astro";
import ScreenManager from "@/components/ScreenManager.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aggie Assistant</title>
</head>
<body>
    <main>
        <div id="chat-container">
            <!-- Left side of the split layout -->
            <div id="information-screen">
                <!-- Logo area -->
                <div class="logo-container">
                    <div class="logo-box">
                       <img src="/images/client/tamu-logo.png" alt="Texas A&M University Logo">
                    </div>
                </div>
                
                <!-- Invitation text -->
                <div class="title-section">
                    <h2>You've been invited to have a conversation with <span class="highlight">Aggie Assist</span></h2>
                </div>
                
                <!-- Create your own text -->
                <div class="create-own">
                    <p>Want to create your own? <a href="https://thiswayglobal.com">Get Started.</a></p>
                </div>
                
                <!-- Start Conversation button -->
                <div class="start-button">
                    <button id="chat-start">
                        Start Conversation
                    </button>
                </div>
                
                <!-- Footer -->
                <div class="footer">
                    Conversation ✨ by <a href="#">ThisWay</a>
                </div>
            </div>
            
            <!-- Right side of the split layout -->
            <div id="chat-screen">
               <!-- Back button for mobile view -->
               <div class="back-button-container">
                   <button id="back-to-info" class="back-button">
                       <span class="back-arrow">←</span> Back
                   </button>
               </div>
               
               <chat-bot></chat-bot>
            </div>
        </div>
    </main>

    <WebChat />
    <ScreenManager />
</body>
</html>